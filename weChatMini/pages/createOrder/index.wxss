.pageTitle{
   font-size: medium;
   display: flex;
   color:rgb(73, 185, 250);
   justify-content: center;
   font-weight: bold;
   padding: 10rpx;
   border-bottom: lightgray solid 1px;
}
.mianArea{
   background-color: white;
   display: flex;
   flex-direction: column;
   display: flex;
}
.deliveryArea{
   display: flex;
   flex-direction: row;
   padding: 10rpx 20rpx;
   border-bottom: lightgray solid 1px;
}
.deliveryInfo{
   font-size: small;
   color: rgb(192, 190, 190);
}
.message{
   display: flex;
   align-items: center;
}

.fixedView{
   position: fixed;
   bottom: 0px;
   height: 100rpx;
   width: 100vw;
   background-color:white;
   border-top: lightgray solid 1px;
   z-index: 1;
   display: flex;
   align-items: center;
   flex-direction: row;
   justify-content: space-between;
   padding-left: 20rpx;
   font-size: small;
}
.submitButton{
   display: flex;
   height: 100rpx;
   width: 200rpx;
   color: white;
   justify-content: center;
   align-items: center;
   background-color: rgb(240, 90, 21);
}
.productListArea{
   padding: 10rpx;
   border-bottom:  lightgray solid 1px;
}
.productCard{
   padding: 10rpx;
   display: flex;
   flex-direction: row;
   font-size: small;
}
.productImage{
   height: 200rpx;
   width: 200rpx;
   border-radius: 10rpx;
}
.productText{
   height: 200rpx;
   display: flex;
   flex-direction: column;
   padding-left: 20rpx;
}
.productName{
   color:rgb(73, 185, 250);
   font-weight: bold;
   height: 70rpx;
}
.productPrice{
   height: 65rpx;
}
.productTotalPrice{
   width: 450rpx;
   height: 65rpx;
   display: flex;
   flex-direction: row;
   justify-content: space-between;
   align-items: center;
}
.redPrice{
   color: rgb(230,67,64);
}
.message{
   padding: 10rpx 20rpx;
   color: gray;
}