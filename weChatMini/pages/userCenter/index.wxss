/**index.wxss**/
.box{
  display: flex;
  flex-direction: column;
}
.personCard{
  display: flex;
  background-color: rgb(0, 187, 255);
  margin:20rpx;
  height: 350rpx;
  box-sizing: border-box;
  border-radius: 5%;
  align-items: center;
}
.userImage{
  display: flex;
  background-color: white;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  margin: auto 20rpx;
}
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 5%;
}
.userinfo-avatar {
  width: 115rpx;
  height: 115rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.histroyCard{
  display: flex;
  flex-direction: column;
  background-color:white;
  margin:30rpx 20rpx 20rpx 20rpx;
  height: 300rpx;
  box-sizing: border-box;
  border-radius: 5%;
}

.histroyCardTitle{
   display: flex;
   flex-direction: row;
   justify-content:space-between;
   margin: 30rpx 30rpx 0rpx 30rpx;
}
.histroyCardContent{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  margin: 0rpx 30rpx;
}

.cardItem{
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  align-items: center;
  justify-content: center;
}


.deliveryCard{
  display: flex;
  flex-direction: column;
  background-color:white;
  margin:30rpx 20rpx 20rpx 20rpx;
  border-radius: 5%;
}
.location{
  width: 50rpx;
  height: 60rpx;
}
.loginButton{
  background-color: rgb(0, 187, 255);
  border: none;
  padding-left: 0px;
  margin-left: 0px;
}
.loginButton::after{
  border:none
}